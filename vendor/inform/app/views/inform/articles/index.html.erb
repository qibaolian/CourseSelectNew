<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1>
        公告列表 :
        <small class="btn btn-warning pull-right"><%= link_to '发布新公告', new_article_path %></small>
      </h1>
    </div>
  </div>
  <div class="row">
  <div class="table-responsive col-md-10 col-md-offset-1">
    <table  border="0" cellspacing="0" cellpadding="0" class="table" style="table-layout:fixed">
      <tr class=" label-primary">
        <th scope="col" width="75%" ><span style="color:white">公告列表</span></th>
        <th scope="col"><span style="color:white">最后更新时间/操作</span></th>
      </tr>
      <% @articles.each do |article| %>
          <tr class="success">
            <td style="overflow:hidden;white-space:nowrap;text-overflow:ellipsis;"><%= article.title %></td>
            <td >
              <%= article.updated_at.to_date %>
              <%= link_to '查看', article %>
              <%= link_to '编辑', edit_article_path(article) %>
              <%= link_to '删除', article, method:  :delete, data: { confirm: '你确定要删除此条公告么?' } %>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
  </div>
</div>


